<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SatlockApp.Views.QrWizardView"
             xmlns:forms="clr-namespace:Lottie.Forms;assembly=Lottie.Forms"
             xmlns:custom="clr-namespace:SatlockApp.Renders" 
             BindingContext="{Binding Main, Source={StaticResource Locator}}">
    <ContentView.Content>
        <StackLayout
            BindingContext="{Binding QrWizard}">
            <Grid
                BackgroundColor="{StaticResource WizardBackgroundColor}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <forms:AnimationView 
	            Grid.Row="0"
	            Animation="paso1.json" 
	            Loop="true" 
                HeightRequest="200"
	            AutoPlay="true" />
                <StackLayout
                    Margin="0,10,0,0"
                    Grid.Row="1"
                    VerticalOptions="Start">
                    <Label
                    Text="Escaneo de código QR: "
                    Style="{StaticResource TutorialTitle}" />
                    <Label
                    Style="{StaticResource TutorialInfo}">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span
                                     Text="Escanee el código QR ubicado en la parte izquierda del equipo, para validar su existencia en plataforma y así mismo poder asignar un viaje." />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <custom:ButtonRender  Margin="20,10,20,10" IsVisible="{Binding ScanEnabled, Mode=TwoWay}"  Command="{Binding ActiveScan, Mode=TwoWay}" CustomBorderColor="#e95936" TextColor="#e95936" Text="Escanear Unidad" CustomBorderRadius="10" CustomBorderWidth="2" CustomBackgroundColor="Transparent" VerticalOptions="Center" />
                    <ActivityIndicator Color="#e95936" IsRunning="{Binding Loading, Mode=TwoWay}" HorizontalOptions="CenterAndExpand" />
                </StackLayout>
            </Grid>
        </StackLayout>
    </ContentView.Content>
</ContentView>